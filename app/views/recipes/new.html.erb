
<h1>New Recipe</h1>


<%= form_with scope: :recipe, url: recipes_path, local: true do |f| %>
  
  <%= f.label "Image" %> <br>
  <%= f.file_field :image %>
  

  <p>
    <%= f.label "Name" %><br>
    <%= f.text_field :name %>
    </p>

    
    <p>
    <%= f.label "Ingredients" %><br>
    <%= f.text_area :ingredients %>
    </p
    
    
    <p>
    <%= f.label "Instructions" %><br>
    <%= f.text_area :instructions %>
    </p
   
    <%= f.label "Category" %><br>
    <%= f.text_area :category %>

    <br/>
    <%= f.label "Author" %><br>
    <%= f.text_area :author %>
    </p>

    <p>
    <%= f.submit %> 
    </p>
<% end %>
