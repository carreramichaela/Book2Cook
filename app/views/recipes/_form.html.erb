
 <%= form_with scope: @recipe, url: recipes_path, local: true do |f| %>


  <% if @recipe.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@recipe.errors.count, "error") %> 
    </h2>
    <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group modal-body">
  <%= f.label "Image" %> <br>
  <%= f.file_field :image %>
  

  <p>
    <%= f.label "Name" %><br>
    <%= f.text_field :name %>
    </p>

    
    <p>
    <%= f.label "Ingredients" %><br>
    <%= f.text_area :ingredients %>
    </p
    
    
    <p>
    <%= f.label "Instructions" %><br>
    <%= f.text_area :instructions %>
    </p
  
    <%= f.label "Category" %><br>
    <%= f.text_area :category %>

    <br/>
    <%= f.label "Author" %><br>
    <%= f.text_area :author %>
    </p>
</div>
    <p>
    <%= f.submit %> 
    </p>
<% end %>

<%= link_to 'Back', recipes_path, class: "btn btn-primary " %>
