
<div class="container">

<%= form_with model: book, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, autocomplete: "off", class: "bookName"  %>
    <%= f.text_field :name, class: "form-control" %>
    <br>
    <%= f.label :subtitle, class: "bookName" %>
    <%= f.text_field :subtitle , class: "form-control" %>
    <br>
    <%= f.label :dedication , class: "bookName"%>
    <%= f.text_field :dedication, class: "form-control textBox"%>
    <br>
    <%= f.label :footer , class: "bookName"%>
    <%= f.text_field :footer, class: "form-control textBox" %>
  </div>
  <div class="actions">
    <%= f.submit nil , class: "greenButton" %>
    <%= link_to 'Back', book, class: "orangeButton" %>
  </div>
<% end %>
