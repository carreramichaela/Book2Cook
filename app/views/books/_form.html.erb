<div class="actions bookTitle"> 
<% if @book == current_book %>
<% if current_book.recipes.any? %>
<h2>Add/Remove Recipes</h2>
 <% else %>
 <h2> You don't have any recipes added to your book. Please add recipes.  </h2>
 <%end%>
</div>


  <table class="table">
  
    <tbody>
      <% current_book.recipes.each do |recipe| %>
        <tr>
          <td>
            <% if current_book.recipes.include?(recipe) %>
              <%= button_to "Remove from #{current_book.name}",
                  book_recipe_cookbook_entries_path(current_book, recipe),
                  method: :delete,
                  class: "orangeButton" %>
            <% else %>
              <%= button_to "Add to #{current_book.name}",
                  book_recipe_cookbook_entries_path(current_book, recipe),
                  class: "greenButton" %>
            <% end %>
          </td>
          <td><%= link_to recipe.name, recipe,  class: "bookName" %></td>
        </tr>
      <% end %>
     
    </tbody>
  </table>
<% end %>


