<h1 class="bookTitle">My Books</h1>

<div class="text-center mb-2">
  <%= link_to "+", new_book_path, class: "addBook" %>
</div>
<div class="bookContainer">
  <% @books.each do |book| %>
    <div class= "bookItems">
      <img src="/book.png" class="bookImage"alt="">
      <p><%= link_to  book.name, edit_book_path(book)  %></p>
            <% if book.recipes.count >0 %>
            <%= link_to 'View Book', book, class: "btn btn-primary" %>
            <% end %>
          
      <%= link_to 'Delete',
        book,
        method: :delete,
        data: {confirm: 'Are you sure?'},
        class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
